<div class="container">
	<div class="row post-list post-show">
		<div class="col-md-6 col-md-offset-3 post-image">
			<%= image_tag("posts/"+@article.image, class:"img-responsive") %>
		</div>
		<div class="col-md-8 col-md-offset-2 ">
      <h2><%= @article.title %></h2>
		</div>
		<div class="col-md-8 col-md-offset-2 post-body">
			  <%= @article.body %>
		</div>
	</div>
<div class="well well-lg">
	<%= link_to '<< Back', articles_path, class:"btn btn-default" %>

	<% if user_signed_in? && @article.user_id == current_user.id %>
	<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-default" %> 
	<% end %>
</div>
	<%= render "shared/new_comment" %>
	<%= render "shared/comments", collection: @comments %>

</div>


